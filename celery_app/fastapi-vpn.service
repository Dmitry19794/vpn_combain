[Unit]
Description=FastAPI VPN Web Interface
After=network.target postgresql.service

[Service]
Type=simple
User=argentum
Group=argentum
WorkingDirectory=/home/argentum/GolandProjects/vpn/vpn/web
ExecStart=/usr/local/bin/uvicorn main:app \
    --host 0.0.0.0 \
    --port 8000
Restart=always
RestartSec=5

[Install]
WantedBy=multi-user.target
